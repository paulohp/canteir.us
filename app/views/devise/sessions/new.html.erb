<div class="login">
  <div class="login-screen">
    <div class="login-icon">
      <img src="/assets/login/icon.png" alt="Welcome to Mail App" />
      <h4>Welcome to <small>Mail App</small></h4>
    </div>
    <div class="login-form">
      <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
        <div class="control-group">
          <%= f.email_field :email, :autofocus => true, :class => "login-field" %>
          <%= f.label :email, :class => "login-field-icon fui-user" %>
        </div>

        <div class="control-group">
          <%= f.password_field :password, :class => "login-field"  %>
          <%= f.label :password, :class => "login-field-icon fui-lock" %>
        </div>

        <div><%= f.submit "Sign in",:class => "btn btn-primary btn-large btn-block" %></div>
        <% if devise_mapping.rememberable? -%>
          <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
        <% end -%>
      <% end %>
    </div>

    <%= render "devise/shared/links" %>
</div>
</div>