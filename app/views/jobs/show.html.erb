<div class="row">
  <div class="span12">
    <p id="notice"><%= notice %></p>
    <div class="row tile my_jobs">
      <header class="span6">
        <h3>
          <%= @job.title %>
        </h3>
      </header>
      <article class="span8">
        <p>
          <b>Categoria:</b>
          <%= @job.category %>
        </p>

        <p>
          <b>Cargo:</b>
          <%= @job.role %>
        </p>

        <p>
          <b>Descrição:</b>
          <%= @job.description %>
        </p>

        <p>
          <b>Salário:</b>
          <%= @job.salary %>
        </p>

        <p>
          <b>Empresa:</b>
          <%= @job.company.name %>
        </p>

        <p>
          <b>Cidade:</b>
          <%= @job.location %>
        </p>
      </article>
      <aside class="span3">
        <%= ejob_applied?(@job.id) %> <br>
        <%= link_to "Ver vagas relacionadas", "#", :class => "btn btn-block" %>
      </aside>
    </div>
    <%= link_to 'Back', jobs_path %>
  </div>
</div>
