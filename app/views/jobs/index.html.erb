<div id="search">
  <%= form_tag jobs_path, :method => 'get' do %>
    <p>
      <%= text_field_tag :search, params[:search], :class => "span9" %>
      <%= submit_tag "Buscar", :name => nil, :class => "span3 btn btn-large btn-warning" %>
    </p>
  <% end %>
</div>
<div class="row">
  <div class="aside">
    <% if user_signed_in? %>
      <div class="span3">
        <%= image_tag avatar_url(@user, 80) %>
        <%= @user.name %>
      </div>
    <% end %>
    <div class="span3">
      <%= search_form_for @search do |f| %>
        <div class="field">
          <%= f.label :title_cont, "Name contains" %>
          <%= f.text_field :title_cont %>
        </div>
        <div class="actions"><%= f.submit "Search" %></div>
      <% end %>
    </div>
  </div>
  <div class="span8">
    <% @jobs.each do |job| %>
      <div class="row tile my_jobs">
        <header class="span4">
          <h3>
            <%= job.title %><small>(<%= job.number_of_vacancies %> vagas)</small>
          </h3>
          <span style="display:inline;margin-right:8px"><strong>Cargo: </strong><%= job.role %></span>
          <span style="display:inline"><strong>Sal√°rio:</strong> A combinar</span>
        </header>
        <aside class="right span3">
          <span><strong>Data: </strong><%= job.created_at.to_s(:post) %></span>
          <span class="fui-location"><strong><%= job.location.upcase %></strong></span>
          <div>
            <%= image_tag(job.company.picture_url, :width => 200) if job.company.picture.present? %>
          </div>
        </aside>
        <article class="span4">
          <span>
            <%= truncate job.description, length: 160 %>
            <%= link_to 'ver mais', job %> 
          </span>
        </article>
        <br>
        <footer class="span4">
          <br>
          <div class="span3">
            <%= ejob_applied?(job.id) %>
          </div>
          <div class="span3">
            <%= link_to "Ver empresa", job.company, :class => "btn btn-block" %>
          </div>
        </footer>
      </div>
    <% end %>
  </div>
</div>