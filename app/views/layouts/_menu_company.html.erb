<div class="span3" style="float:right;margin-right:-30px;">
  <% if company_signed_in? %>
    <select name="herolist" value="<%= current_company.name %>" class="select-block span3" onchange="location = this.options[this.selectedIndex].value;">
      <option value="/" selected="selected"><%= current_company.name %></option>
      <option value="<%= company_path(current_company.id) %>"><%= link_to "Perfil", company_path(current_company.id) %></option>
      <option value="2">Minhas Vagas</option>
      <option value="<%= company_path %>">Configurações</option>
      <option value="<%= destroy_user_session_path %>"><%= link_to "Sair", destroy_user_session_path, :method => :delete %></option>
    </select>
  <% else %>
    <select name="herolist" value="Cadastre-se" class="select-block span3" onchange="location = this.options[this.selectedIndex].value;">
      <option value="<%= new_user_registration_path %>" selected="selected">Cadastre-se</option>
      <option value="<%=new_user_session_path%>">Login</option>
    </select>
  <% end %>
</div>
