<h1>Listing resumes</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Dob</th>
    <th>Gender</th>
    <th>Civil</th>
    <th>Children</th>
    <th>Professional objctive</th>
    <th>Job area</th>
    <th>Mini resume</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @resumes.each do |resume| %>
  <tr>
    <td><%= resume.name %></td>
    <td><%= resume.dob %></td>
    <td><%= resume.gender %></td>
    <td><%= resume.civil %></td>
    <td><%= resume.children %></td>
    <td><%= resume.professional_objctive %></td>
    <td><%= resume.job_area %></td>
    <td><%= resume.mini_resume %></td>
    <td><%= link_to 'Show', resume %></td>
    <td><%= link_to 'Edit', edit_resume_path(resume) %></td>
    <td><%= link_to 'Destroy', resume, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

