<div class="span12">
  <%= link_to "Imprimir", "/", :class=>"btn btn-primary" %>
  <%= link_to "Enviar por e-mail", "", :class=>"btn btn-primary" %>
</div>
<br>
<br>
<br>
<div class="span3">
  <span><strong>Endereço:</strong>
    <%= @resume.address %>&nbsp;<%= @resume.complement %> <br>
    <%= @resume.district %> <br>
    <%= @resume.postal_code %> <br>
    <%= @resume.city %>/<%= @resume.state %>
  </span>
</div>
<div class="span3">
  <span><strong>Email:</strong>
    <%= @resume.user.email %> <br>
    <strong>Tel.:</strong>
    <%= @resume.tel_residence %> <br>
    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%= @resume.tel_commercial %> <br>
    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%= @resume.tel_celular %>
  </span>
</div>
<div class="span12 row">
  <h1>
    <%= @resume.name %>
  </h1>
</div>
<div class="span12 row">
  <span style="margin-right:25px;">
    <strong>Data de Nascimento: </strong>
    <%= @resume.dob %>
  </span>

  <span style="margin-right:25px;">
    <strong>Sexo: </strong>
    <%= @resume.gender %>
  </span>

  <span style="margin-right:25px;">
    <strong>Estado Civil: </strong>
    <%= @resume.civil %>
  </span>

  <span>
    <strong>Possui Filhos: </strong>
    <%= @resume.children %>
  </span>
  <hr />
</div>
<div class="span12 row">
  <p>
    <h4>Objetivo Professional:</h4>
    <%= @resume.professional_objctive %>
  </p>

  <p>
    <h4>Áreas/Cargos Pretendidos:</h4>
    <%= @resume.job_area %>
  </p>
  <hr />
  <p>
    <h5>Mini Currículo:</h5>
    <%= @resume.mini_resume %>
  </p>
  <hr />
</div>
<div class="span12">
  <div style="margin-left:0px;" class="span4">
    <h4>Formação Academica</h4>
  </div>
  <div class="span8">
    <% @formacao_academica.each do |formacao| %>
      <span><strong>Curso:&nbsp;</strong><%= formacao.name %></span><br>
      &nbsp;&nbsp;&nbsp;<span><strong>Grau:&nbsp;</strong><%= formacao.degree %></span><br>
      &nbsp;&nbsp;&nbsp;<span><strong>Instituição:&nbsp;</strong><%= formacao.institution %></span><br>
      &nbsp;&nbsp;&nbsp;<span><strong>Data de Inicio:&nbsp;</strong><%= formacao.initial %></span><br>
      &nbsp;&nbsp;&nbsp;<span><strong>Data Final:&nbsp;</strong><%= formacao.final %></span><br>
      <br><br>
    <% end %>
  </div>
</div>
<div class="span12">
  <div style="margin-left:0px;" class="span4">
    <h4>Experiencia Profissional</h4>
  </div>
  <div class="span8">
    <% @experiencia_profissional.each do |experiencia| %>
      <span><strong>Nome da Empresa:&nbsp;</strong><%= experiencia.company %></span><br>
      &nbsp;&nbsp;&nbsp;<span><strong>Cargo:&nbsp;</strong><%= experiencia.role %></span><br>
      &nbsp;&nbsp;&nbsp;<span><strong>Funções:&nbsp;</strong><%= experiencia.functions %></span><br>
      &nbsp;&nbsp;&nbsp;<span><strong>Data de Inicio:&nbsp;</strong><%= experiencia.initial %></span><br>
      &nbsp;&nbsp;&nbsp;<span><strong>Data de Saida:&nbsp;</strong><%= experiencia.final %></span><br>
      <br><br>
    <% end %>
  </div>
</div>
<div class="span12">
  <%= link_to 'Editar', edit_resume_path(@resume), :class=>"btn" %>
  <%= link_to 'Voltar', resumes_path, :class=>"btn" %>
</div>
