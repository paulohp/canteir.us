<div class="row demo-tiles">
  <% @companies.each do |company| %>
    <div class="span3">
      <div class="tile">
        <%= company.name %>
        <%= company.location %>
        <%= link_to 'Show', company %>
        <%= link_to 'Edit', edit_company_path(company) %>
        <%= link_to 'Destroy', company, method: :delete, data: { confirm: 'Are you sure?' } %>
      </div>
    </div>
  <% end %>
</div>
